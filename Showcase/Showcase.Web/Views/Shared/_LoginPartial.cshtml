@using Microsoft.AspNetCore.Identity
@using Showcase.Web.Models

@inject SignInManager<ShowcaseUser> SignInManager
@inject UserManager<ShowcaseUser> UserManager

<ul>
    @if (SignInManager.IsSignedIn(User))
    {
        <li>
            <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li>
            <a id="logout" type="submit" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
        </li>
    }
    else
    {
        <li>
            <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>