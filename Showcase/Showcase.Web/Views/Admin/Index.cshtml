@model IEnumerable<Showcase.Web.Models.ShowcaseUserViewModel>

@{
    ViewData["Title"] = "Administration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Administation</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Muted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.EmailConfirmed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Muted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
