@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<h1>@ViewData["Title"]</h1>
<h2>Reset your password.</h2>
<hr />
<div>
    <div>
        <form method="post">
            <div asp-validation-summary="ModelOnly" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div>
                <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div>
                <input asp-for="Input.Password" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div>
                <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <button type="submit">Reset</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
