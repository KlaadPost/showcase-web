@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" role="alert"></div>

    <label asp-for="Input.OldPassword">
        Old password
        <em>&nbsp;<span class="secondary" asp-validation-for="Input.OldPassword"></span></em>
    </label>
    <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />

    <label asp-for="Input.NewPassword">
        New password
        <em>&nbsp;<span class="secondary" asp-validation-for="Input.NewPassword"></span></em>
    </label>
    <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />

    <label asp-for="Input.ConfirmPassword">
        Confirm new password
        <em>&nbsp;<span class="secondary" asp-validation-for="Input.ConfirmPassword"></span></em>
    </label>
    <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />

    <button type="submit">Update password</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
