@model string

@if (!String.IsNullOrEmpty(Model))
{
    <dialog open="true" role="alert" id="modal">
        <article>
            <header>
                <a href="#close" aria-label="Close" class="close"></a>
                Alert
            </header>
            <p>
                @Model
            </p>
        </article>
    </dialog>
}
